---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div id="contact" class="w-full min-h-screen flex flex-col justify-center items-center bg-gray-800">
  <div class="self-center text-center w-full xl:w-1/3 px-4 sm:px-0">
    <h2 class="font-bold tracking-widest text-gray-200 text-4xl mb-4">{title}</h2>
    <div class="font-light text-gray-400 text-xl">
      <slot />
    </div>
  </div>
</div>
